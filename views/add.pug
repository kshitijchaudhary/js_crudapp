doctype html
html
  head
    title Add User
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1.text-center.mb-4 Add User
      form(action="/add" method="POST")
        .mb-3
          label.form-label(for="firstName") First Name:
          input.form-control(type="text" name="firstName" required)
        .mb-3
          label.form-label(for="lastName") Last Name:
          input.form-control(type="text" name="lastName" required)
        .mb-3
          label.form-label(for="dob") Date of Birth:
          input.form-control(type="date" name="dob" required)
        .mb-3
          label.form-label(for="address1") Address 1:
          input.form-control(type="text" name="address1" required)
        .mb-3
          label.form-label(for="address2") Address 2:
          input.form-control(type="text" name="address2")
        .mb-3
          label.form-label(for="city") City:
          input.form-control(type="text" name="city" required)
        .mb-3
          label.form-label(for="postalCode") Postal Code:
          input.form-control(type="text" name="postalCode" required)
        .mb-3
          label.form-label(for="country") Country:
          input.form-control(type="text" name="country" required)
        .mb-3
          label.form-label(for="phoneNumber") Phone Number:
          input.form-control(type="text" name="phoneNumber" required)
        .mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email" name="email" required)
        .mb-3
          label.form-label(for="notes") Notes:
          textarea.form-control(name="notes")
        button.btn.btn-primary(type="submit") Add User
        a.btn.btn-secondary.ms-2(href="/display") View Users
