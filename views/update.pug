doctype html
html
  head
    title Update User
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1.text-center.mb-4 Update User
      form(action=`/update/${user._id}` method="POST")
        .mb-3
          label.form-label(for="firstName") First Name:
          input.form-control(type="text" name="firstName" value=user.firstName required)
        .mb-3
          label.form-label(for="lastName") Last Name:
          input.form-control(type="text" name="lastName" value=user.lastName required)
        .mb-3
          label.form-label(for="dob") Date of Birth:
          input.form-control(type="date" name="dob" value=user.dob required)
        .mb-3
          label.form-label(for="address1") Address 1:
          input.form-control(type="text" name="address1" value=user.address1 required)
        .mb-3
          label.form-label(for="address2") Address 2:
          input.form-control(type="text" name="address2" value=user.address2)
        .mb-3
          label.form-label(for="city") City:
          input.form-control(type="text" name="city" value=user.city required)
        .mb-3
          label.form-label(for="postalCode") Postal Code:
          input.form-control(type="text" name="postalCode" value=user.postalCode required)
        .mb-3
          label.form-label(for="country") Country:
          input.form-control(type="text" name="country" value=user.country required)
        .mb-3
          label.form-label(for="phoneNumber") Phone Number:
          input.form-control(type="text" name="phoneNumber" value=user.phoneNumber required)
        .mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email" name="email" value=user.email required)
        .mb-3
          label.form-label(for="notes") Notes:
          textarea.form-control(name="notes")= user.notes
        button.btn.btn-success(type="submit") Update User
        a.btn.btn-danger.ms-2(href="/display") Cancel
