doctype html
html
  head
    title Display Users
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1.text-center.mb-4 User List
      table.table.table-striped
        thead
          tr
            th First Name
            th Last Name
            th Email
            th Phone
            th City
            th Actions
        tbody
          each user in users
            tr
              td= user.firstName
              td= user.lastName
              td= user.email
              td= user.phoneNumber
              td= user.city
              td
                a.btn.btn-warning.btn-sm(href=`/update/${user._id}`) Edit
                form(action=`/delete/${user._id}` method="POST" style="display:inline")
                  button.btn.btn-danger.btn-sm(type="submit") Delete
      a.btn.btn-primary(href="/") Add New User
